<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leef.demo" >

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DemoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".demo_gridview.GridViewActivity"
            android:label="@string/title_activity_grid_view" >
        </activity>
        <activity
            android:name=".demo_loadmore.LoadMoreActivity"
            android:label="@string/title_activity_load_more" >
        </activity>
        <activity
            android:name=".demo_threadpool.ThreadPoolActivity"
            android:label="@string/title_activity_thread_pool" >
        </activity>
        <activity
            android:name=".demo_volley_okhttp.NetworkActivity"
            android:label="@string/title_activity_network" >
        </activity>
        <activity
            android:name=".demo_callback.CallbackActivity"
            android:label="@string/title_activity_callback" >
        </activity>
        <activity
            android:name=".demo_eventbus.EventBusActivity"
            android:label="@string/title_activity_event_bus" >
        </activity>
        <activity
            android:name=".demo_bitmaps.BitmapsActivity"
            android:label="@string/title_activity_bitmaps" >
        </activity>
        <activity
            android:name=".demo_bus.BusActivity"
            android:label="@string/title_activity_bus" >
        </activity>
        <activity
            android:name=".demo_recyclerview.RecyclerViewActivity"
            android:label="@string/title_activity_recycler_view" >
        </activity>
        <activity
            android:name=".demo_mvp.view.UserActivity"
            android:label="@string/title_activity_user" >
        </activity>
        <activity
            android:name=".demo_rxandroid.RxAndroidActivity"
            android:label="@string/title_activity_rx_android" >
        </activity>
    </application>

</manifest>
